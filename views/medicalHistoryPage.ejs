<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Medical History</title>
  <link rel="stylesheet" href="./css/stylesheet.css" />
</head>

<body class="body-wrap">
  <div>
    <header class="page-header">
      <p><%= user.userName %>'s Medical History</p>
    </header>
    <section class="page-tabs">
      <div>
        <span><a href="/user/<%= user.userId %>/medical-history">My Medical History</a></span>
        <span>|</span>
        <span><a href="/medical-history">Create New</a></span>
        <span>|</span>
        <span><a href="/medical-history/<%= medicalHistory.medicalHistoryId %>/update">Update</a></span>
      </div>
    </section>
    <section class="page-body">
      <% for (const medicalHistory of medicalHistory) { %>
      <div class="flex-fill">
        <div class="data-card">
          <h3><%= medicalHistory.conditionName %></h3>
          <p>Diagnosis Date: <%= medicalHistory.diagnosisDate %></p>
          <p>Treatment: <%= medicalHistory.treatment %></p>
          <p>Note: <%= medicalHistory.note ?? 'Unknown' %></p>
        </div>
      </div>
      <% } %>
    </section>
  </div>
</body>

</html>
