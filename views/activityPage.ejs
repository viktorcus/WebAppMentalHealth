<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Activity</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>

<body class="body-wrap">
  <div>
    <header class="page-header">
      <p><%= user.userName %>'s Activity</p>
    </header>
    <section class="page-tabs">
      <div>
        <span><a href="/activity">History</a></span>
        <span>|</span>
        <span>Progress</span>
        <span>|</span>
        <span><a href="/activity/create">Create New</a></span>
      </div>
    </section>
    <section class="page-body">
      <% for (const activity of activityData) { %>
      <div class="flex-fill">
        <div class="data-card">
          <h3><%= activity.activityType %></h3>
          <p class="data-card-time"><%= activity.startTime.toLocaleString('en-US') %> - <%= activity.endTime.toLocaleString('en-US') %></p>
          <% if (activity.caloriesBurned) { %>
          Calories: <%= activity.caloriesBurned %>
          <% } %>
          <% if (activity.note) { %>
          <%= activity.note %>
          <% } %>
        </div>
      </div>
      <% } %>
    </section>
  </div>
</body>

</html>